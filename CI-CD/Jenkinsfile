pipeline {
    agent {
        docker {
            image 'maven:3.8.5-openjdk-17-slim'
            args '--user root'
        }
    }
    stages {
        stage('Checkout') {
            steps {
                sh 'echo passed'
            }
        }
        stage('Build and Test') {
            steps {
                // List files for verification
                sh 'ls -ltr'

                // Build the project and create a JAR file
                sh '''
                    cd CI-CD
                    mvn clean package
                '''
            }
        }
    }
}
